<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuatPesananActivity"
    android:background="@color/dasar"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/etusername"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking Kamar"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">

        <TableRow
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:textColor="@color/putih"
                android:id="@+id/staticRoomNumber"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Room Number"/>
            <TextView
                android:textColor="@color/putih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>

            <TextView
                android:textColor="@color/putih"
                android:id="@+id/room_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="  TextView"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:background="@color/dasar2">

            <TextView
                android:textColor="@color/putih"
                android:id="@+id/staticTariff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tariff"/>
            <TextView
                android:textColor="@color/putih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>

            <TextView
                android:textColor="@color/putih"
                android:id="@+id/tariff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="  TextView"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:textColor="@color/putih"
                android:id="@+id/staticDurasi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Durasi" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>

            <EditText
                android:id="@+id/durasi_hari"
                android:layout_width="0dp"
                android:textColor="@color/putih"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:background="@color/dasar2">

            <TextView
                android:textColor="@color/putih"
                android:id="@+id/staticTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Total: "
                android:layout_weight="1"/>
            <TextView
                android:textColor="@color/putih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"/>

            <TextView
                android:textColor="@color/putih"
                android:id="@+id/total_biaya"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="     TextView"
                android:layout_weight="1"/>
        </TableRow>


    </LinearLayout>


    <Button
        android:id="@+id/hitung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="HITUNG"
        android:background="@color/dasar2"
        android:textColor="@color/putih"
        android:textStyle="bold" />

    <Button
        android:id="@+id/pesan"
        android:background="@color/dasar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="PESAN"
        android:textColor="@color/putih"
        android:textStyle="bold" />



</LinearLayout>